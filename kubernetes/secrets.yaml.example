# Kubernetes Secrets Template
# NOTE: This is an EXAMPLE file. Create actual secrets.yaml with real values.
# DO NOT commit secrets.yaml to Git! Add it to .gitignore

# To create secrets, use one of these methods:
# 1. kubectl create secret (recommended)
# 2. kubectl apply with base64 encoded values
# 3. AWS Secrets Manager + External Secrets Operator

# Example: Create secrets using kubectl
# kubectl create secret generic database-secrets \
#   --from-literal=username=postgres \
#   --from-literal=password=your-secure-password \
#   --namespace=yushan

# kubectl create secret generic gateway-secrets \
#   --from-literal=hmac-secret=your-hmac-secret-key \
#   --from-literal=jwt-secret=your-jwt-secret-key \
#   --namespace=yushan

# kubectl create secret generic aws-secrets \
#   --from-literal=access-key-id=your-aws-access-key \
#   --from-literal=secret-access-key=your-aws-secret-access-key \
#   --namespace=yushan

# kubectl create secret generic mail-secrets \
#   --from-literal=username=your-email@gmail.com \
#   --from-literal=password=your-app-password \
#   --namespace=yushan

---
# Database Secrets
apiVersion: v1
kind: Secret
metadata:
  name: database-secrets
  namespace: yushan
type: Opaque
stringData:
  username: "postgres"
  password: "REPLACE_WITH_DB_PASSWORD"

---
# Gateway Secrets (HMAC and JWT)
apiVersion: v1
kind: Secret
metadata:
  name: gateway-secrets
  namespace: yushan
type: Opaque
stringData:
  hmac-secret: "REPLACE_WITH_GATEWAY_HMAC_SECRET"
  jwt-secret: "REPLACE_WITH_JWT_SECRET"

---
# AWS Secrets (for S3 access)
apiVersion: v1
kind: Secret
metadata:
  name: aws-secrets
  namespace: yushan
type: Opaque
stringData:
  access-key-id: "REPLACE_WITH_AWS_ACCESS_KEY_ID"
  secret-access-key: "REPLACE_WITH_AWS_SECRET_ACCESS_KEY"

---
# Mail Secrets (for email verification)
apiVersion: v1
kind: Secret
metadata:
  name: mail-secrets
  namespace: yushan
type: Opaque
stringData:
  username: "REPLACE_WITH_EMAIL_ADDRESS"
  password: "REPLACE_WITH_APP_PASSWORD"

